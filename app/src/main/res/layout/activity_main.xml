        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_below="@+id/myRelative2"
            android:background="#ffffff"
            android:divider="@null"></ListView>
        <!-- 天气end -->

        <!-- 横线start -->
        <!-- 横线end -->

        <!-- 未來15天start -->
        <RelativeLayout
            android:id="@+id/myRelative3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/listView"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorW">

            <View
                android:id="@+id/view2"
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorJh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:text="未來15天天氣"
                android:textColor="@color/colorB"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@mipmap/zuo" />

        </RelativeLayout>
        <!-- 未來15天end -->

        <!-- 友情提示 start -->
        <RelativeLayout
            android:id="@+id/myRelative4"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/myRelative3"
            android:layout_marginTop="10dp"
            android:background="@color/colorW">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/bg" />

            <TextView
                android:id="@+id/wendu"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/image1"
                android:layout_marginLeft="33dp"
                android:layout_toRightOf="@id/image1"
                android:lineSpacingExtra="3dp"
                android:text="昼夜温差较大，较易发生感冒，请适当增减衣服。体质较弱的朋友请注意防护。"
                android:textColor="@color/colorB"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/wendu1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/wendu"
                android:layout_below="@id/wendu"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:drawableLeft="@mipmap/wenduji"
                android:drawablePadding="4dp"
                android:text="3℃" />


            <TextView
                android:id="@+id/qiya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wendu"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/wendu1"
                android:drawableLeft="@mipmap/qiya"
                android:drawablePadding="4dp"
                android:text="120hPa" />

        </RelativeLayout>
        <!-- 友情提示 end -->

        <!-- GridView-start -->
        <demo.com.watherpro.adapter.MyGridView
            android:id="@+id/gradeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myRelative4"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:horizontalSpacing="10px"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10px"></demo.com.watherpro.adapter.MyGridView>
        <!-- GridView-end -->


    </RelativeLayout>


</ScrollView>